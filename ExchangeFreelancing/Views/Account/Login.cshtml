@model ExchangeFreelancing.Models.LoginModelView
@{
    ViewBag.Title = "Вход";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<style>
    form {
        width: 500px;
        margin: 160px auto;
    }
</style>

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Аутентификация</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(x => x.Username, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
        </div>

    </div>
   
    <div class="form-group">
        @Html.LabelFor(x => x.Password, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="checkbox">
                @Html.CheckBoxFor(x => x.RememberMe)
                @Html.LabelFor(x => x.RememberMe)
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            <input class="btn btn-default" value="Войти" type="submit" />
            @Html.ActionLink("Регистрация", "Register", "Account", new { @class = "btn btn-default" })


        </div>

    </div>
}