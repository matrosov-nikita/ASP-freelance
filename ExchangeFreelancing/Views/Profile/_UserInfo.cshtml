@model ExchangeFreelancing.Models.ApplicationUser
<style>
    form {
        width:450px;
        margin:auto;
    }
</style>

@using (Html.BeginForm("_UserInfo", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form", id="userForm" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.UserName, "Логин", new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", value = @Model.UserName })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Name,  new { @class = "form-control", value=@Model.Name})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Surname, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", value=@Model.Surname})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Email, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", value=@Model.Email, type="email" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Country, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Country, new { @class = "form-control", value=@Model.Country})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Town, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Town, new { @class = " form-control", value=@Model.Town })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Age, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Age, new { @class = "number form-control", value=@Model.Age })
        </div>
        
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ExtraInformation, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextAreaFor(x => x.ExtraInformation, new { @class = "number form-control", value = @Model.ExtraInformation })
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-6">
            <input class="btn btn-default" value="Сохранить" type="submit" />
        </div>
    </div>

}
