@model ExchangeFreelancing.Models.WorkForCheck
<br />
<em>Отправьте результаты работы заказчику</em> <br /><br />

@using (Html.BeginForm("SendWorkForCheck", "Order", new { num_order = Model.num_order }, FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Message, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextAreaFor(x => x.Message, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-3 control-label"> Загрузка файлов </label>
        <div class="col-md-9">
            <input type="file" class="form-control" multiple="multiple" name="collection">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-6">
            <input class="btn btn-default" value="Отправить" type="submit" />
        </div>
    </div>
}
